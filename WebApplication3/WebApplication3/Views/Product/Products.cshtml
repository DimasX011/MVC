@model ProductsCatalog 

@{
    ViewData["Title"] = "Список продуктров";
}

@foreach (var type in Model.GetProducts)
{
    <div> @type.Id  @type.Name  @type.Description @type.Type  </div>
}

<form method="post">
    Id: <input type="text" name="id" required />
    <br/>
    Имя: <input type="text" name="name" />
    <br/>
     Описание: <input type="text" name="description" />
    <br/>
    Тип: <input type="text" name="type" />
    <br/>
    <input type="submit" name="submit" value="Создать" />
</form>